<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@drawable/shape_album_item_bg">

    <!--android:background="#00ffff"-->
    <com.bobo.himalayan.views.RoundRectImageView
        android:id="@+id/album_conver"
        android:layout_width="68dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_height="65dp" />

    <!--layout_toRightOf 在某个元素的右边-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/album_conver"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/album_title_tv"
            android:layout_width="match_parent"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:text="拿破仑·希尔《成功学全书》"
            android:textSize="18sp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/album_description_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:lines="1"
            android:ellipsize="end"
            android:text="为你开启成功之路给你指向未来一起行动"
            android:textColor="#ff848484"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="6dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="6dp"
                    android:src="@mipmap/play_info_icon" />

                <TextView
                    android:id="@+id/album_play_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="888.8万"
                    android:layout_marginLeft="2dp"
                    android:textColor="#ff848484"
                    android:textSize="7sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="30dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="6dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="6dp"
                    android:src="@mipmap/ic_sound" />

                <TextView
                    android:id="@+id/album_content_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="88集"
                    android:layout_marginLeft="2dp"
                    android:textColor="#ff848484"
                    android:textSize="7sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
