<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_album_item_bg">

    <TextView
        android:id="@+id/order_text"
        android:layout_width="wrap_content"
        android:textSize="22sp"
        android:padding="18dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="#979797"
        android:text="0"/>

    <!--android:layout_width="wrap_content"-->
    <LinearLayout
        android:id="@+id/title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/order_text"
        android:orientation="vertical">

        <!--android:layout_marginRight="100dp"
        android:textSize="20sp"-->
        <TextView
            android:id="@+id/detail_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="#000000"
            android:ellipsize="end"
            android:text="我是大标题我是大标题我是大标题我大标题"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detail_item_play_count"
                android:drawableLeft="@mipmap/play_info_icon"
                android:drawablePadding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="888.8万"
                android:textColor="#979797"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/detail_item_duration"
                android:drawableLeft="@mipmap/ic_sound"
                android:drawablePadding="4dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05：23"
                android:textColor="#979797"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>

    <!-- android:layout_toRightOf="@id/title_container"
    android:layout_marginRight="26dp"
    android:gravity="center"
    android:layout_centerVertical="true"-->
    <TextView
        android:id="@+id/dwtail_item_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:textSize="12sp"
        android:layout_marginBottom="10dp"
        android:textColor="#979797"
        android:text="2019-08"/>


</RelativeLayout>
